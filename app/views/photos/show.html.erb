
<%- model_class = Photo -%>


<div class="container">
  <div class="row">
    <div class="col-md-6">

     <div class=" container-fluid imagedetails shadow">
     <%= image_tag @photo.image_url.to_s, :width => "353" , :class => "img img-responsive" %>
     </div>

   </div>
   <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading" id="Focus" style="height: 73px;
        text-align: initial; padding-top:5%; background-color:#2C3E50;">Photo Details
        </div>

        <div class="panel-body" style="background-color: #EEEEEE;">

              <div class="row">
                 <div class="col-md-4 labelstyle">
                   Photo Title    
                 </div>
                 <div class="col-md-8 contentstyle" >  
                  <%= @photo.title %>
                 </div>  
              </div>
              <br>
              <div class="row">
                  <div class="col-md-4 labelstyle">
                    Photo Description:
                  </div>
                  <div class="col-md-8 contentstyle" >  
                    <%= @photo.description %>
                  </div> 
              </div>
              <br>
              <div class="row">
                  <div class="col-md-4  labelstyle">
                    Created At:
                  </div>
                  <div class="col-md-8 contentstyle" >  
                   <%= @photo.created_at%>
                  </div> 
             </div>
             <br>
             <div class="row">
                  <div class="col-md-4  labelstyle">
                    Last Updated: 
                  </div>
                  <div class="col-md-8 contentstyle" >  
                   <%= @photo.updated_at%>
                 </div> 
             </div>
             <br>

          </div>
          <div class="panel-footer shadow" style="background-color:#2C3E50;">

            <%= link_to t('.back', :default => t("helpers.links.back")),
            photos_path, :class => 'btn btn-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_photo_path(@photo), :class => 'btn btn-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            photo_path(@photo),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>
          </div>


        </div>
      </div>

    </div>
</div>












