
<div class="container">

       <div class="row">
                  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <%= form_for @user,:html => { :class => "form-horizontal formstyle", :role => "form" }, :url => { :controller => :user, :action => :user_sign_in } do |f| %>
                  
                   <h2>Enter Login Details</h2>

                   <hr class="colorgraph">
                  <div class="form-group">
                    <%= f.text_field :email, :id => "email", :class => "form-control input-lg", :placeholder => "Email Address", :tabindex => "1"%>
                  </div> 
                 
                      <div class="form-group">
                        <%= f.password_field :password,required: true, :id => "password", :class => "form-control input-lg", :placeholder => "Password", :tabindex => "2" %>
                      </div>
                  
                 <hr class="colorgraph">
                 <div class="row">
                  <div class="col-xs-12 col-md-6">
                  </div>
                  <div class="col-xs-12 col-md-6 offset-3">
                   <%= f.submit :login, {:class=>"btn btn-primary btn-block btn-lg",:tabindex => "7",:value => "Submit",data: { disable_with: "Please wait..."}, } %>
                  </div>
                  
                </div>
                <% end %>
              </div>
       </div>
</div>











